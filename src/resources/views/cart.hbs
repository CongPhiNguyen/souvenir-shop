<script>
    var listProvince;
    const elementProvince = document.querySelector('select[name="province"]');

    fetch('https://provinces.open-api.vn/api/?depth=2')
        .then(response => response.json())
        .then(data => {
            listProvince = data;
            console.log(listProvince);
            const html = listProvince.map(value => (
                `<option value=${value.codename}>${value.name}</option>`
            ))
            elementProvince.innerHTML = html.join('');
        })
        .catch(err => console.log("Lỗi"));


    console.log(elementProvince)

    var item = JSON.parse(localStorage.getItem('index'))
    var element = document.querySelector('input[name="luong_thien_phuoc"]');

    reduceQuantity = (slug) => {
        element = document.querySelector(`input[name="${slug}"]`);
        element.value = item.quantity--
        console.log(element.value)
        localStorage.setItem('index', JSON.stringify(item))
    }

    raiseQuantity = (slug) => {
        element = document.querySelector(`input[name="${slug}"]`);
        element.value = item.quantity++
        console.log(item.quantity)
        localStorage.setItem('index', JSON.stringify(item))
    }

</script>